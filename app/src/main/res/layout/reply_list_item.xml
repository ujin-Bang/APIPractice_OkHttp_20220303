<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSelectedSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[1번진영]"/>

        <TextView
            android:id="@+id/txtWrihtNickname"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="작성자 닉네임"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txtReplyCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글의 내용"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txtCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="두시간 전(시간 문구)"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtReReplyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/dark_gray_border_box"
            android:text="답글 0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/dark_gray_border_box"
            android:text="좋아요 0"/>

        <TextView
            android:id="@+id/txtDisLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/dark_gray_border_box"
            android:text="싫어요 0"/>


    </LinearLayout>

</LinearLayout>